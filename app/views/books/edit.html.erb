<body>
	<h1><strong>Editing Book</strong></h1>
<%= form_for(@book) do |f| %>
<div class="field">
    <%= f.label :Title %>
    <%= f.text_field :title, class: "book_title" %>
</div>
<div class="field">
    <%= f.label :body %>
    <%= f.text_area :body, class: "book_body" %>
</div>
<div class="actions">
    <%= f.submit 'Update Book' %>
</div>
<% end %>

<%= link_to "Show", book_path(@book) %>
|
<%= link_to "Back", books_path, class: "back" %>
</body>